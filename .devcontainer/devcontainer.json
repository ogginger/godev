{
    "name": "Go Dev Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "features": {
        "ghcr.io/devcontainers/features/go:1": {
            "version": "1.24.2"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "github.copilot"
            ]
        }
    },
    "remoteUser": "root",
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind"
}
